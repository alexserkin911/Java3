<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="v2-1-students" author="Alex S">
        <preConditions>
            <not>
                <tableExists tableName="STUDENTS"/>
            </not>
        </preConditions>
        <createTable tableName="STUDENTS">
            <column name="ID" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="NAME" type="varchar(50)"/>
            <column name="SURNAME" type="varchar(50)"/>
            <column name="BIRTH_DATE" type="date"/>
            <column name="GROUP_ID" type="int">
                <constraints foreignKeyName="GROUPS_STUDENTS_FK"
                             referencedTableName="groups"
                             referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="v1-2-students" author="Alex S">
        <preConditions onFail="MARK_RAN">
            <tableIsEmpty tableName="STUDENTS"/>
        </preConditions>
        <loadData tableName="STUDENTS" file="src/main/resources/db/data/data-students.csv"/>
    </changeSet>
</databaseChangeLog>